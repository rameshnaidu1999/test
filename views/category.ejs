<%- include('./header') %>

<div class="continer-fluid">
    <div class="mx-3">
      <div class="text-center">category page </div>
      <div class="row ">
        <% for(var i=0; i < list.length; i++) { %>
        <div class="col-lg-3 col-xl-3 col-md-10">
          <div class="card mt-3 shadow mb-3 bg-white rounded border-primary" >
            <div class="card-img">
              <img src="<%- list[i].image %>" alt="" style="height: 30vh !important; width: 100% !important;"/>
            </div>
            <div class="card-body">
              <h4> <%- list[i].title %> </h4>
              <h6> <%- list[i].info %> </h6>
                <button type="submit" class="btn btn-outline-primary btn-block">Add to Cart</button>
                <a href="users/buy"  class="btn btn-primary btn-block" >Buy Now</a>
            </div>
          </div>
        </div>
        <% } %> 
      </div>
    </div>
</div>


<%- include('./footer') %>


