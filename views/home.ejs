<%- include('./header') %>

<div class="continer-fluid">
      <div class="mx-3">
        <div class="row ">
          <% for(var i=0; i < items.length; i++) { %>
          <div class="col-lg-3 col-xl-3 col-md-10">
            <div class="card mt-3 shadow mb-3 bg-white rounded border-primary" >
              <div class="card-img">
                <img src="<%- items[i].image %>" alt="" style="height: 30vh !important; width: 100% !important;"/>
              </div>
              <div class="card-body">
                <h3> <%- items[i].title %> </h3>
                <h6> <%- items[i].info %> </h6>
                  <a href="cart" 
                    class="btn btn-outline-primary btn-block" >Add to Cart</a>
                  <a href="buy"  class="btn btn-primary btn-block" >Buy Now</a>
              </div>
            </div>
          </div>
          <% } %> 
        </div>
      </div>
    </div>
    
    <%- include('./footer') %>

<script src="javascripts/script.js"></script>
    


