<div class="continer-fluid">
      <div class="mx-3">
        <div class="row ">
          <% for(var i=0; i < items.length; i++) { %>
          <div class="col-lg-3 col-xl-3 col-md-10" >
            <div class="card mt-3 rounded border-success"  >
              <div class="card-img">
                <img src="<%- items[i].image %>" alt="" style="height: 30vh !important; width: 100% !important;"/>
              </div>
              <div class="card-body">
                <h3> <%- items[i].title %> </h3>
                <h6> Amount: <%- items[i].amount %> / <%- items[i].info %> </h6>
                <form method="post" action="/" >
                  <input type="submit" name="put" value='put' onClick="return confirm('Are you sure you want to delete?')" />
                  <input type="hidden" name="_method" value="PUT" />
              </form>
                <button href="buy"  onclick="Add_to_Cart()"
                    class="btn btn-outline-success btn-block mt-2" > Add to Cart </button>
                  <button href="buy"  
                    class="btn btn-success btn-block mt-2"> Buy Now </button>
              </div>
            </div>
          </div>
          <% } %> 
        </div>
      </div>
    </div>
    
<script src="/javascript/script.js"></script>
    


